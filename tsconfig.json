{
  "display": "Node LTS (24)",
  "_version": "24.0.0",
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "NodeNext",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "build",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "isolatedDeclarations": true,
    "declaration": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts"]
}
